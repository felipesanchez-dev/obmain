---
import Button from "./ui/button.astro";
---

<form id="form" class="needs-validation" novalidate>
  <input type="checkbox" class="hidden" style="display:none" name="botcheck" />
  <div class="mb-5">
    <input
      type="text"
      placeholder="Nombre Completo"
      required
      class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-hidden focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
      name="name"
    />
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Por favor ingresa tu nombre completo.
    </div>
  </div>
  <div class="mb-5">
    <label for="email_address" class="sr-only">Correo Electrónico</label><input
      id="email_address"
      type="email"
      placeholder="Correo Electrónico"
      name="email"
      required
      class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-hidden focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    />
    <div class="empty-feedback text-red-400 text-sm mt-1">
      Por favor ingresa tu correo electrónico.
    </div>
    <div class="invalid-feedback text-red-400 text-sm mt-1">
      Por favor ingresa un correo electrónico válido.
    </div>
  </div>
  <div class="mb-5">
    <input
      type="tel"
      placeholder="Teléfono (opcional)"
      class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-hidden focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
      name="phone"
    />
  </div>
  <div class="mb-3">
    <textarea
      name="message"
      required
      placeholder="Tu Mensaje"
      class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-hidden h-36 focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
    ></textarea>
    <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
      Por favor ingresa tu mensaje.
    </div>
  </div>
  <Button type="submit" size="lg" block>Enviar Mensaje</Button>
  <div id="result" class="mt-3 text-center"></div>
</form>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }
</style>

<script is:inline>
  const form = document.getElementById("form");
  const result = document.getElementById("result");
  const submitButton = form.querySelector('button[type="submit"]');

  form.addEventListener("submit", async function (e) {
    e.preventDefault();
    form.classList.add("was-validated");

    if (!form.checkValidity()) {
      form.querySelectorAll(":invalid")[0].focus();
      return;
    }

    // Verificar botcheck (honeypot anti-spam)
    const botcheck = form.querySelector('[name="botcheck"]');
    if (botcheck && botcheck.checked) {
      return; // Es un bot, no enviar
    }

    const formData = new FormData(form);
    const data = {
      name: formData.get("name"),
      email: formData.get("email"),
      phone: formData.get("phone"),
      message: formData.get("message"),
    };

    // Deshabilitar botón y mostrar loading
    submitButton.disabled = true;
    submitButton.textContent = "Enviando...";
    result.innerHTML = "";
    result.className = "mt-3 text-center";

    try {
      const response = await fetch("/api/contact", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      const json = await response.json();

      if (response.ok && json.success) {
        result.classList.add("text-green-600", "font-semibold");
        result.innerHTML = json.message;
        form.reset();
        form.classList.remove("was-validated");
      } else {
        result.classList.add("text-red-600", "font-semibold");
        result.innerHTML = json.message || "Error al enviar el mensaje.";
      }
    } catch (error) {
      console.error("Error:", error);
      result.classList.add("text-red-600", "font-semibold");
      result.innerHTML = "Error de conexión. Por favor intenta nuevamente.";
    } finally {
      // Rehabilitar botón
      submitButton.disabled = false;
      submitButton.textContent = "Enviar Mensaje";

      // Ocultar mensaje después de 5 segundos
      setTimeout(() => {
        result.style.opacity = "0";
        result.style.transition = "opacity 0.5s";
        setTimeout(() => {
          result.innerHTML = "";
          result.className = "mt-3 text-center";
          result.style.opacity = "1";
        }, 500);
      }, 5000);
    }
  });
</script>
